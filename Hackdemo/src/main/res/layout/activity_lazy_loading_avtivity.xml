<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="androidpath.ll.hackdemo.lazyloading.LazyLoadingAvtivity">


    <Button
        android:id="@+id/btn_show_hidden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onShowHidden"
        android:text="Show Hidden"/>

    <ViewStub
        android:id="@+id/viewstub1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:layout="@layout/lazyloadinglayout1"/>

    <ViewStub
        android:id="@+id/viewstub2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:layout="@layout/lazyloadinglayout2"/>


</LinearLayout>
